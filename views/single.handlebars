{{!-- single.handlebars is what shows when you click on a single blog and it is shown full view. It will also show all the comments --}}
<div class="text-center">
<p>{{entry_title}}</p>
<p>{{entry}}</p>
{{! display all the comments that belong to the above blog--}}
{{#each comment as |comment| }}
{{> singlecomment}}
{{/each}}
{{!-- also put a form here for creating a new comments --}}
  <div class="col-md-6">
    <h3>Comment on this Blog Post:</h3>
    <form class="form new-project-form">
      <div class="form-group">
        <label for="blog-entry">Comment:</label>
        <input class="form-input" type="text" id="comment-entry" name="comment-entry" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Comment</button>
      </div>
    </form>
  </div>
</div>
{{!--  javascript over in the public folder to handle the form submission --}}
<script src="./js/comment_crud.js"></script>